{
  "exclude": ["apps/**/*"],
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "vite/**/*",
    "electron/**/*",
    "utils",
    "types"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "strict": true,

    /* Alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  }
}
